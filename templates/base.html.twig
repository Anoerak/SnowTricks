<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8"/>
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta content="text/html; charset=UTF-8; X-Content-Type-Options=nosniff" http-equiv="Content-Type"/>
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
		<link
		rel="shortcut icon" href="{{ asset('favicon.ico') }}">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{
			encore_entry_link_tags('app')
		}}
		{% endblock %}
		{% block javascripts %}
			{{
			encore_entry_script_tags('app')
		}}
		{% endblock %}
	</head>

	<body>
		{% for message in app.flashes('danger') %}
			<div class="alert alert-danger">
				{{ message }}
			</div>
		{% endfor %}
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		{# We place the Header component here #}
		{% block header %}
			{% include 'components/header/header.html.twig' %}
		{% endblock header %}
		{# We place the Body component here #}
		{% block body %}{% endblock %}
		{# We place the footer component here #}
		{% block footer %}
			{% include 'components/footer/footer.html.twig' %}
		{% endblock footer
		%}
	</body>
</html>
